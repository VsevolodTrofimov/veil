{
    "name": "Veil",
    "description": "Спасает детей от кибуербуллинга в комментариях",
    "content_scripts": [
    {
      "matches": [ "*://vk.com/*" ],
      "js": ["inline.js" ]
    }
    ],
    "browser_action": {
        "default_icon": {
            "38": "icon.png"
            },
        "default_title": "Вуаль"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
    "version": "0.1"
}
